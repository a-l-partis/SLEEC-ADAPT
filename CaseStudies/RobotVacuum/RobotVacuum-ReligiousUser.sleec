def_start
	event PauseForTenMinutesThenCheckAgain
	event AlertUser
	event VacuumStart
	event VacuumEnd
	event RemapStart
	event RemindToOpenWindow
	measure robotStuck : boolean
	measure prayingTime : boolean
	

def_end
rule_start
	Rule1 when VacuumEnd and robotStuck then AlertUser unless prayingTime then PauseForTenMinutesThenCheckAgain
	Rule2 when VacuumStart then SetSilentCleaningMode
	Rule3 when RemapStart then AlertUser unless prayingTime then PauseForTenMinutesThenCheckAgain
rule_end
