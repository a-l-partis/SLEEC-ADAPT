WorkflowStructure {
	workflowspec Loop {
		loop GuardedWorkflow {
			body Sequence {
				subworkflows {
					Decision {
						options {
							GuardedWorkflow {
								body Task {
									ID "AlertUser"
								}
								guard BoolComp {
									op AND
									right Atom {
										measureID "daytime"
									}
									left Atom {
										measureID "wayBlocked"
									}
								}
							},
							GuardedWorkflow {
								body Task {
									ID "Skip"
								}
								guard Not {
									op "not"
									expr BoolComp {
										op AND
										right Atom {
											measureID "daytime"
										}
										left Atom {
											measureID "wayBlocked"
										}
									}
								}
							}
						}
					},
					Task {
						ID "Vacuum"
					}
				}
			}
			guard Atom {
				measureID "needsVacuuming"
			}
		}
	}
}